<h1 class="title">New Game</h1>

<div class="letters">
<% @letters.each do |letter| %>
<div class="letter">
  <h1><%= letter %></h1>
  </div>
  <% end %>
</div>
<div class="form">
  <form action="/score" method="POST">
  <input type="text" name="word"><input type="submit" value="Play">
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
